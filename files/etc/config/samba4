
config samba
	option charset 'UTF-8'
	option description 'Samba on Pi5Plus'
	option macos '1'
	option workgroup 'PI5PLUS'

config sambashare
	option create_mask '0777'
	option dir_mask '0777'
	option guest_ok 'no'
	option name 'sda1'
	option path '/mnt/sda1'
	option read_only 'no'
	option users 'root'

config sambashare
	option create_mask '0777'
	option dir_mask '0777'
	option guest_ok 'no'
	option name 'nvme0n1p1'
	option path '/mnt/nvme0n1p1'
	option read_only 'no'
	option users 'root'

